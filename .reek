---
UtilityFunction:
  public_methods_only: true

Attribute:
  exclude:
    - "Cannon::Response#status" # safe to be writeable

DataClump:
  exclude:
    - "Cannon::HttpCookieParser"

DuplicateMethodCall:
  exclude:
    - "Cannon::HttpCookieParser"

FeatureEnvy:
  exclude:
    - "Cannon::HttpCookieParser#read_whitespace"

TooManyStatements:
  exclude:
    - "Cannon::HttpCookieParser"
    - "Cannon::Runtime::Config#initialize"

exclude_paths:
  - spec/features
